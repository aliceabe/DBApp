extends layout

block content
  
  div.container(style="width: auto;")

    div.page-header
      h1 See statistics by airport

     form.form-horizontal(method='post', role='form', enctype='application/json')
      div.form-group
        label.col-sm-4 Select an airport of your choice:
        div.col-sm-8
          select(name='airport').form-control
            each o in allairport
              option #{o.airp}

      div.form-group
        div.col-sm-offset-4.col-sm-8
          button.login.btn.btn-primary(type='submit') See statistics

      